<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <a href="/users/logout">Logout</a>
    
<div class="head1">
    <h1 class="hello-login">Hello <%= user.charAt(0).toUpperCase() + user.slice(1)  %></h1>
    <div class="logo-div">
        
        <img src="/logos/logo1.png" alt="video-viewer-logo">
        <div class="head-div">
        MOST WATCHED VIDEOS OF THE WEEK
        </div>
       
    </div>
    
</div>

<div class="video-div">
    <ul>
        <% if (files.length > 0) { %>
  <li>  <%= files[0].title %> </li>
  <li> <%= files[0].description %> </li>
   <li> <video controls id="videoPlayer" name="vid" width="750"  >
            <source type="video/mp4" src=<%= files[0].filepath %> /> 
    </video>
</li>  <% } %>

</ul>
<div class="buttons">
   <button id="prev">Previous</button>
    <button id="next">Next</button>   
</div>

    <p id="counter"><%= counter %></p>
    <p id="count"><%= count.length %></p>
</div>
    
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script>
        //Handle the behaviours of next and previous buttons

        const nextbtn = document.querySelector('#next');
        const prevbtn = document.querySelector('#prev');

        let counter = +document.querySelector('#counter').textContent;
        const dbcount = +document.querySelector('#count').textContent;

        // console.log('counter: '+ counter + " "+ typeof counter)
        // console.log('dbcount '+ dbcount + " " + typeof dbcount)

        if(counter >= dbcount)
        {
            nextbtn.style.display = 'none'
        }

        if(counter <= 1)
        {
            prevbtn.style.display = 'none'
        }

        nextbtn.addEventListener('click', getNextVideo)
        prevbtn.addEventListener('click', getPreviousVideo)

        function getNextVideo(){
            counter++;
            let url = 'http://localhost:3000/users/increment';
            let data = {data: counter}
            $.post(url, data, (data, status) => {

            })
            location.reload()
        }
        
        
        function getPreviousVideo() {
            counter--;
            let url = 'http://localhost:3000/users/decrement';
            let data = {data: counter}
            $.post(url, data, (data, status) => {
                
            })
    
            location.reload()   
        }
       
        
    </script>
  
</body>
</html>